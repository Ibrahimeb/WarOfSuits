<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.presentation.ui.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_page_player_two"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_4"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_half_game_page_vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/view_poker_card" />

    <TextView
        android:id="@+id/tv_game_page_name_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        app:layout_constraintEnd_toEndOf="@+id/rv_game_page_player_two"
        app:layout_constraintTop_toBottomOf="@+id/rv_game_page_player_two"
        tools:text="Ibrahim" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_page_player_one"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_4"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_half_game_page_vertical"
        tools:listitem="@layout/view_poker_card" />

    <TextView
        android:id="@+id/tv_game_page_name_player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        app:layout_constraintBottom_toTopOf="@+id/rv_game_page_player_one"
        app:layout_constraintEnd_toEndOf="@+id/rv_game_page_player_one"
        tools:text="Leonardo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half_game_page_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

</androidx.constraintlayout.widget.ConstraintLayout>